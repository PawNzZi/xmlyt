<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include
        android:id="@+id/title_bar"
        layout="@layout/title_bar" />

    <ImageView
        android:id="@+id/bookThumb"
        android:layout_width="match_parent"
        android:layout_height="550dp" />
    <androidx.appcompat.widget.AppCompatSeekBar
        android:id="@+id/seekbar"
        android:progressDrawable="@drawable/seekbar_brightness_selector"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:splitTrack="false"
        android:thumb="@mipmap/seekbar_qiu"
        >

    </androidx.appcompat.widget.AppCompatSeekBar>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorPrimaryDark"
        >

        <ImageView
            android:layout_centerVertical="true"
            android:id="@+id/prePlay"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_marginLeft="50dp"
            android:src="@mipmap/activity_preplay"
            >

        </ImageView>
        <ImageView
            android:layout_centerVertical="true"
            android:id="@+id/startPlay"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_centerHorizontal="true"
            android:src="@mipmap/activity_pause"
            >

        </ImageView>
        <ImageView
            android:layout_centerVertical="true"
            android:id="@+id/nextPlay"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="50dp"
            android:src="@mipmap/activity_nextplay"
            >

        </ImageView>
    </RelativeLayout>

</LinearLayout>